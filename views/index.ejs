<html>
  <head>
    <title>Axia-connect</title>

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
      charset="utf-8"
    />
    <link rel="shortcut icon" href="images/axia-4.svg" type="image/x-icon" />

    <!-- Bootstrap -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.min.js"
      integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    />
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
      integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
      crossorigin="anonymous"
    ></script>

</script>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
/>
<!-- Bootstrap -->

<link href= "/public/assets/style.css" rel="stylesheet" type="text/css" />
<script src="openvidu-browser-2.18.0.js"></script>
<script src="app.js"></script>
<script>
  $(document).ready(function () {
    $('[data-toggle="tooltip"]').tooltip({
      html: true,
    });
  });
</script>
</head>

<body>
<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"
        ><img class="demo-logo" src="public/images/axia-4.svg" /> Axia-connect</a
      >
      <a
        class="navbar-brand nav-icon"
        href="https://github.com/"
        title="GitHub Repository"
        target="_blank"
        ><i class="fa fa-github" aria-hidden="true"></i
      ></a>
    </div>
  </div>
</nav>
<div id="logged">
  <div id="join" class="vertical-center">
    <div id="img-div">
      <img src="public/images/axia-4.svg" />
      <div id="company-name">Axia-connect</div>
    </div>
    <div id="join-dialog" class="jumbotron">
      <h1>Join a video session</h1>
      <form class="form-group" onsubmit="return false">
        <p>
          <label>Participant</label>
          <input class="form-control" type="text" id="nickName" required />
        </p>
        <p>
          <label>Session</label>
          <input class="form-control" type="text" id="sessionName" required />
        </p>
        <p class="text-center">
          <button class="btn btn-lg btn-success" onclick="joinSession()">
            Join!
          </button>
        </p>
      </form>
      <hr />
      <div id="login-info">
        <div>Logged as <%= name %></div>
        <form action="/logout?_method=DELETE" method="POST">
          <button id="logout-btn" class="btn btn-warning" type="submit">Log Out</button>
        </form>
      </div>
    </div>
  </div>

  <div id="session" style="display: none">
    <div id="session-header">
      <h1 id="session-title"></h1>


    </div>
    <div id="main-video" class="col-md-6">
      <p class="nickName"></p>
      <p class="userName"></p>
      <video autoplay playsinline="true"></video>
    </div>
    <div id="video-container" class="col-md-6"></div>
    <div class="btn-group">
      <button
        type="button"
        class="btn btn-primary"
        id="buttonMuteAudio"
        onmouseup="muteAudio();"
        value="Audio"
        title="Mute/Unmute Audio"
      >
        <img src="images/outline_mic_off_black_24dp.png" />
      </button>
      <button
        type="button"
        class="btn btn-primary"
        id="buttonMuteVideo"
        onmouseup="muteVideo();"
        value="Video"
        title="On/Off Video"
      >
        <img src="images/outline_videocam_black_24dp.png" />
      </button>
      <button
        type="button"
        class="btn btn-primary btn-danger"
        id="buttonLeaveSession"
        onmouseup="removeUser(); leaveSession()"
        value="Leave session"
        title="Leave Session"
      >
        <img src="images/outline_call_end_black_24dp.png" />
      </button>
    </div>
    <div id="log-container">
      <pre id="log"></pre>
    </div>
    <form id="sendtextmessage">
      <input type="text" id="texttosend" name="texttosend" />
      
      <input
        class="btn btn-large btn-danger"
        type="button"
        value="Submit"
        id="buttonSendText"
        onclick="sendText(document.getElementById('texttosend').value); emptytext();"
      />
    </form>
  </div>

</div>
</div>

</div>
<footer class="footer">
    <div class="container">
      <a href="http://www.openvidu.io/" target="_blank"
        ><img class="openvidu-logo" src="public/images/axia-4.svg"
      /></a>
    </div>
  </footer>
</body>
</html>

